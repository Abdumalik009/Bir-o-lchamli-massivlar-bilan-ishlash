import java.util.Scanner;

public class ToqlarTartibida {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.print("Massiv uzunligini kiriting: ");
        int uzunlik = scanner.nextInt();

        int[] massiv = new int[uzunlik];
        System.out.println("Massiv elementlarini kiriting:");
        for (int i = 0; i < uzunlik; i++) {
            massiv[i] = scanner.nextInt();
        }


        System.out.print("Massiv elementlari orasidan toqlar: ");
        for (int i = 1; i < uzunlik - 1; i += 2) {
            System.out.print(massiv[i] + " ");
        }

        int toqlarSoni = (uzunlik + 1) / 2;
        System.out.println("\nToqlar soni = " + toqlarSoni);
    }
}
